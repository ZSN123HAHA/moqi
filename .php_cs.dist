<?php

$finder = PhpCsFixer\Finder::create()
    ->in(__DIR__.'/backend')->exclude('runtime')->exclude('_generated')
    ->in(__DIR__.'/common')
    ->in(__DIR__.'/console')->exclude('runtime')->exclude('_generated')
    ->in(__DIR__.'/frontend')->exclude('runtime')->exclude('_generated')
;

return PhpCsFixer\Config::create()
    ->setRules([
        '@Symfony' => true,
        'ordered_imports' => true,
        'no_unused_imports' => true,
        'phpdoc_align' => false,
        'phpdoc_summary' => false,
        'phpdoc_to_comment' => false,
    ])
    ->setFinder($finder)
;
